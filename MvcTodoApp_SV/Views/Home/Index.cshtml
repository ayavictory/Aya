@model List<MvcTodoApp.Models.TaskItem>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>تطبيق المهام اليومية - MVC</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        ul { list-style-type: none; padding: 0; }
        li { margin: 10px 0; padding: 10px; background: #f5f5f5; border-radius: 5px; }
        form { display: inline; margin-left: 10px; }
        input[type="text"] { padding: 5px; width: 300px; }
        button { padding: 5px 10px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>قائمة المهام اليومية</h1>
    <ul>
        @foreach (var task in Model)
        {
            <li>
                @if(task.IsComplete)
                {
                    <s>@task.Title</s>
                }
                else
                {
                    <form method="post" asp-action="EditTask">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="text" name="newTitle" value="@task.Title" />
                        <button type="submit">تعديل</button>
                    </form>
                    
                    <form method="post" asp-action="CompleteTask">
                        <input type="hidden" name="id" value="@task.Id" />
                        <button type="submit">اكتملت</button>
                    </form>
                }
            </li>
        }
    </ul>
    <form method="post" asp-action="AddTask">
        <input type="text" name="title" placeholder="أضف مهمة جديدة" required />
        <button type="submit">إضافة</button>
    </form>
</body>
</html>